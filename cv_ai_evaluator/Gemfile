source "https://rubygems.org"

ruby "3.3.10"

# ===== PLATFORM-SPECIFIC SETTINGS =====
platform :x64_mingw_ucrt do
  gem "bigdecimal", prerelease: true
  gem "date", prerelease: true
  gem "stringio", prerelease: true
  gem "io-console", prerelease: true
  gem "erb", prerelease: true
end

# ===== CORE RAILS =====
gem "rails", "~> 8.1.1"
gem "puma", ">= 5.0"

# ===== DATABASE =====
gem "mysql2", "~> 0.5", platforms: [:ruby, :mswin, :mingw]

# ===== BACKGROUND JOBS =====
gem "delayed_job_active_record"
gem "daemons"

# ===== PDF PROCESSING =====
gem "pdf-reader", "~> 2.12"

# ===== AI INTEGRATION =====
gem "ollama-ai", "~> 1.3.0"

# ===== HTTP CLIENT =====
gem "faraday"
gem "faraday-retry"

# ===== JSON HANDLING =====
gem "oj"

# ===== CORS =====
gem "rack-cors"

# ===== CACHE & QUEUE =====
gem "solid_cache"
gem "solid_queue"
gem "solid_cable"

# ===== PERFORMANCE =====
gem "bootsnap", require: false

# ===== DEPLOYMENT =====
gem "kamal", require: false
gem "thruster", require: false

# ===== STORAGE =====
gem "image_processing", "~> 1.2"

# ===== WINDOWS SUPPORT =====
gem "tzinfo-data", platforms: %i[ windows jruby ]

# ===== DEVELOPMENT & TEST =====
group :development, :test do
  gem "debug", platforms: %i[ mri windows ], require: "debug/prelude"
  gem "bundler-audit", require: false
  gem "brakeman", require: false
  gem "rubocop-rails-omakase", require: false
end
